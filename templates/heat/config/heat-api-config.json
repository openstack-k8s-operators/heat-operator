{
  "command": "/usr/sbin/httpd -DFOREGROUND",
  "config_files": [
    {
      "source": "/var/lib/config-data/default/heat-api-httpd.conf",
      "dest": "/etc/httpd/conf/httpd.conf",
      "preserve_properties": true,
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/default/ssl.conf",
      "dest": "/etc/httpd/conf.d/ssl.conf",
      "owner": "heat",
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/tls/certs/*",
      "dest": "/etc/pki/tls/certs/",
      "owner": "heat",
      "perm": "0640",
      "optional": true,
      "merge": true
    },
    {
      "source": "/var/lib/config-data/tls/private/*",
      "dest": "/etc/pki/tls/private/",
      "owner": "heat",
      "perm": "0600",
      "optional": true,
      "merge": true
    },
    {
      "source": "/var/lib/config-data/default/httpd_custom_heat-api*",
      "dest": "/etc/httpd/conf/",
      "owner": "apache",
      "perm": "0444",
      "optional": true
    }
  ],
  "permissions": [
    {
      "path": "/etc/httpd/",
      "owner": "apache:apache",
      "recurse": true
    },
    {
      "path": "/etc/httpd/run",
      "owner": "heat:apache",
      "recurse": true
    },
    {
      "path": "/var/www/cgi-bin/heat",
      "owner": "heat:heat",
      "recurse": true
    }
  ]
}
