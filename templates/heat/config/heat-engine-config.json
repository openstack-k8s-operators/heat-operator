{
  "command": "/usr/bin/heat-engine",
  "config_files": [
    {
      "source": "/var/lib/config-data/merged/heat.conf",
      "dest": "/etc/heat/heat.conf",
      "merge": false,
      "preserve_properties": true,
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/merged/custom.conf",
      "dest": "/etc/heat/heat.conf.d/custom.conf",
      "merge": false,
      "preserve_properties": true,
      "perm": "0644"
    },
    {
      "source": "/var/lib/config-data/secrets/heat.conf",
      "dest": "/etc/heat/heat.conf.d/secrets.conf",
      "merge": false,
      "preserve_properties": true,
      "perm": "0600"
    }
  ],
  "permissions": [
    {
      "path": "/etc/heat/heat.conf.d",
      "owner": "heat:heat",
      "recurse": true
    },
    {
      "path": "/var/log/heat",
      "owner": "heat:heat",
      "recurse": true
    }
  ]
}
